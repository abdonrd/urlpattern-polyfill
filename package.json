{
  "name": "urlpattern-polyfill",
  "version": "2.0.0",
  "description": "Polyfill for the URLPattern API",
  "repository": {
    "type": "git",
    "url": "https://github.com/kenchris/urlpattern-polyfill"
  },
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "types": "./dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "ava": "^3.14.0",
    "esm": "^3.2.25",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build:esm": "esbuild --bundle --format=esm src/index.ts --outfile=dist/index.raw.js && cp ./src/patch-global.js ./dist/index.js",
    "build:cjs": "esbuild --bundle --format=cjs src/index.ts --outfile=dist/index.raw.cjs && cp ./src/patch-global.cjs ./dist/index.cjs",
    "copy:dts": "cp ./src/index.d.ts ./dist",
    "build": "npm run build:esm && npm run build:cjs && npm run copy:dts",
    "pretest": "npm run build",
    "test": "ava --fail-fast -s",
    "publish-dev": "npm test && VERSION=${npm_package_version%-*}-dev.`git rev-parse --short HEAD` && npm version --no-git-tag-version $VERSION && npm publish --tag dev"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {}
}
